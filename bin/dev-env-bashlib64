# Attention: this env file is automatically sourced by dev-set

#
# Module variables
#
# * Shared internal variables for module tasks
#

# shellcheck disable=SC2154
{
  # Env / BashLib64 / Module environment definition version
  export DEV_ENV_BASHLIB64_ID='bl64'
  export DEV_ENV_BASHLIB64_VERSION='3.0.0'

  # Lib / BashLib64 / Skip installation?
  export DEV_LIB_BASHLIB64_SKIP='YES'
  # Lib / BashLib64 / Location
  export DEV_LIB_BASHLIB64_TARGET="${DEV_PATH_LIB}/${DEV_ENV_BASHLIB64_ID}"
  # Lib / BashLib64 / Version
  export DEV_LIB_BASHLIB64_VERSION='22.10.0'
}

#
# Locals
#
# * Use .local.env file or CICD variables to override values
#

# shellcheck disable=SC2154
{
  if [[ ! -f "${DEV_LIB_BASHLIB64_TARGET}/bashlib64.bash" ]]; then
    DEV_LIB_BASHLIB64_SKIP='NO'
  fi
}

#
# External
#
# * External tools only. Use to declare configuration env-vars
#

# shellcheck disable=SC2154
{
  # Lib / Installer64 / Installer64 parameters
  export INST64_BASHLIB64_TARGET="$DEV_LIB_BASHLIB64_TARGET"
}
