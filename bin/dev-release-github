# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source=lib/bl64/bashlib64.bash
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-rxtx.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-api.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-vcs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1
# shellcheck source-path=bin
source ./bin/dev-env-git &&
  source ./bin/dev-env-github || exit 1

declare MY_RELEASE_TAG="${1:-}"

function my_release_create() {
  bl64_dbg_app_show_function "$@"
  local tag="$1"
  local notes="$2"

  bl64_msg_show_task "Create GitHub Release (${tag})"
  # shellcheck disable=SC2154
  "$DEV_LIB_GITHUB_BIN" \
    release create \
    --latest \
    --verify-tag \
    --repo="${DEV_RELEASE_GITHUB_REPO_OWNER}/${DEV_RELEASE_GITHUB_REPO_NAME}" \
    --target="$DEV_GIT_BRANCH_MAIN" \
    --notes-file="$notes" \
    --title="$tag" \
    "$tag"
}

function my_release_upload() {
  bl64_dbg_app_show_function "$@"
  local tag="$1"
  local artifacts=''

  [[ -z "$DEV_RELEASE_GITHUB_ARTIFACT" ]] && return 0
  if [[ -d "$DEV_RELEASE_GITHUB_ARTIFACT" ]]; then
    artifacts="$(bl64_fs_file_search "$DEV_RELEASE_GITHUB_ARTIFACT")" &&
      [[ -n "$artifacts" ]] ||
      return $?
  else
    artifacts="$DEV_RELEASE_GITHUB_ARTIFACT"
  fi

  bl64_msg_show_task "Upload release assets (${DEV_RELEASE_GITHUB_REPO_OWNER}/${DEV_RELEASE_GITHUB_REPO_NAME})"
  # shellcheck disable=SC2086
  "$DEV_LIB_GITHUB_BIN" \
    release upload \
    --repo="${DEV_RELEASE_GITHUB_REPO_OWNER}/${DEV_RELEASE_GITHUB_REPO_NAME}" \
    "$tag" \
    $artifacts
}

function my_release() {
  bl64_dbg_app_show_function "$@"
  local tag="$1"
  local notes=''
  local -i status=0

  notes="$(bl64_fs_create_tmpfile)" &&
    bl64_vcs_changelog_get_release "$DEV_BASE_CHANGELOG" "$tag" >"$notes"
  [[ ! -s "$notes" ]] && bl64_msg_show_error 'Unable to extract changelog for the requested tag' && status=1

  if ((status == 0)); then
    my_release_create "$tag" "$notes" &&
      my_release_upload "$tag"
    status=$?
  fi
  bl64_fs_rm_tmpfile "$notes"
  return $status
}

function my_initialize() {
  bl64_dbg_app_show_function
  dev_bin64_task_initialize &&
  bl64_check_parameter 'MY_RELEASE_TAG' &&
    bl64_check_export 'DEV_RELEASE_GITHUB_REPO_OWNER' &&
    bl64_check_export 'DEV_RELEASE_GITHUB_REPO_NAME' &&
    bl64_check_command "$DEV_LIB_GITHUB_BIN" &&
    bl64_check_file "$DEV_BASE_CHANGELOG" &&
    dev_bin64_task_show_setup \
      'DEV_RELEASE_GITHUB_REPO_OWNER' \
      'DEV_RELEASE_GITHUB_REPO_NAME' \
      'DEV_RELEASE_GITHUB_ARTIFACT' \
      'DEV_BASE_CHANGELOG' \
      'DEV_GIT_BRANCH_MAIN' \
      'MY_RELEASE_TAG'
}

bl64_lib_script_version_set '2.3.0'
bl64_msg_help_about_set 'Create a GitHub release'
dev_bin64_initialize && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_release "$MY_RELEASE_TAG"
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
