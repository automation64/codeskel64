# shellcheck source=bin/dev-set
source ./bin/dev-set || { echo 'dev-set:Error: unable to load dev environment' 2>&1 && exit 1; }
# shellcheck source-path=/opt/bl64
source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-ui.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fs.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-txt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-xsv.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-fmt.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-module-bsh.bash" &&
  source "${DEV_LIB_BASHLIB64_TARGET}/bashlib64-core.bash" || exit 1

declare MY_PROFILE="${1:-}"

function my_remove() {
  bl64_dbg_app_show_function
  bl64_fs_path_remove \
    "${DEV_PATH_BUILD}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_ETC}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_LOGS}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_TMP}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_VAR}/${DEV_BASE_PROFILE}/${MY_PROFILE}" \
    "${DEV_PATH_VAULT}/${DEV_BASE_PROFILE}/${MY_PROFILE}"
}

function my_initialize() {
  bl64_dbg_app_show_function
  dev_bin64_task_initialize &&
  bl64_check_parameter 'MY_PROFILE' ||
    return $?
  if [[ "$MY_PROFILE" == "$DEV_PROFILE" ]]; then
    bl64_msg_show_error 'Target profile can not be the current one. Please change to a different profile before removing'
    return $BL64_LIB_ERROR_PARAMETER_INVALID
  fi
  dev_bin64_task_show_setup \
    'MY_PROFILE' &&
    bl64_ui_ask_confirmation \
      "Warning: the operation will remove all content from the profile [${MY_PROFILE}]. If not tracked by GIT, it will be permanently lost. Confirm operation? Type:" \
      'YES'
}

[[ -n "$DEV_CICD_DEBUG" ]] && bl64_dbg_all_enable
bl64_lib_script_version_set '2.1.2'
bl64_msg_help_about_set 'Remove profile directory structure'
dev_bin64_initialize && my_initialize || exit $?

bl64_msg_show_batch_start "$BL64_SCRIPT_ID"
my_remove
bl64_msg_show_batch_finish $? "$BL64_SCRIPT_ID"
